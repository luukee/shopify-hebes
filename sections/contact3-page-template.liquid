<section id="section_page_header" class="wpb_row section-page-header {% if section.settings.image-banner != blank %}section-page-header-color{% endif %}" {% if section.settings.image-banner != blank %}style="background-image: url({{ section.settings.image-banner | img_url: '1920x', format: 'pjpg' | split:'?' | first }}); background-repeat: no-repeat; background-position: center center; background-size: cover; background-color: transparent;"{% endif %}>
    <div class="container">
        <div class="page-header-inner">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="page-title">{{ page_title }}</h1>
                    <div class="la-breadcrumbs hidden-xs">
                      <div class="la-breadcrumb-content">
                        <div class="la-breadcrumb-wrap">
                          <div class="la-breadcrumb-item"><a href="{{ shop.url }}" class="la-breadcrumb-item-link is-home" rel="home" title="{{ shop.name | escape }}">{{ 'general.breadcrumbs.home' | t }}</a></div>
                          <div class="la-breadcrumb-item">
                            <div class="la-breadcrumb-item-sep"><i class="icon dl-icon-right"></i></div>
                          </div>
                          <div class="la-breadcrumb-item"><span class="la-breadcrumb-item-target">{{ page.title }}</span></div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="page-width-content template-page-about3 template-page-contact3">
  <div class="container-full">
    <div class="row">

      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="custom-block-column-about4">
          {% if section.settings.title_left01 != blank %}
          <h1>{{ section.settings.title_left01 }}</h1>
          {% endif %}
          {% if section.settings.text01 != blank %}
          <p>{{ section.settings.text01 }}</p>
          {% endif %}
		  {% if section.settings.title_left02 != blank %}
          <p class="light">{{ section.settings.title_left02 }}</p>
          {% endif %}
		  {% if section.settings.text02 != blank %}
          <p class="light"><ul>{{ section.settings.text02 }}</ul></p>
          {% endif %}
          {% if section.settings.title_form_contact != blank %}
          <p class="light">{{ section.settings.title_form_contact }}</p>
          {% endif %}
          <div class="grid">
            <div class="contact-form form-vertical">
              {% form 'contact' %}

              {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
              {% endif %}

              {{ form.errors | default_errors }}

              <input type="text" id="ContactFormName" name="contact[name]" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'contact.form.name' | t }}">

              <input type="email" id="ContactFormEmail" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="{% if form.errors contains 'email' %}input--error{% endif %}" placeholder="{{ 'contact.form.email' | t }}">

              <input type="tel" id="ContactFormPhone" name="contact[phone]" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'contact.form.phone' | t }}">

              <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>

              <input type="submit" class="btn" value="{{ 'contact.form.submit' | t }}">

              {% endform %}
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="image">
            {% if section.settings.image != blank %}
            <img src="{{ section.settings.image | img_url: '775x980' }}" alt="{{ section.settings.image.alt }}" />
            {% else %}
          	{{ 'image' | placeholder_svg_tag }}
            {% endif %}
        </div>
		<div class="image">
            {% if section.settings.image02 != blank %}
            <img src="{{ section.settings.image02 | img_url: '775x980' }}" alt="{{ section.settings.image02.alt }}" />
            {% else %}
          	{{ 'image' | placeholder_svg_tag }}
            {% endif %}
        </div>
      </div>
      
    </div>
  </div>
</div>

