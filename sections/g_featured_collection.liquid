{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '11' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}
<div class="g-featured-collection g-style-nav {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="container">
    {% if section.settings.title != blank %}
    	<h3 class="title-style-1 text-center">{{ section.settings.title }}</h3>
    {% endif %}
    <div class="g-stick-featured-collection" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":{% if section.settings.use_arrows %}true{% else %}false{% endif %},"speed":"1000","autoplaySpeed":3000,"vertical":true,"centerMode":false,"variableWidth":false,"responsive":[{"breakpoint":1824,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
      {% for block in section.blocks %}
      <div class="row row-flex-center">
        <div class="col-md-9 col-sm-9 col-xs-12">
          {% if block.settings.title != blank %}
          	<h5>{{ block.settings.title }}</h5>
          {% endif %}
          {% if block.settings.heading != blank %}
          	<h2>{{ block.settings.heading }}</h2>
          {% endif %}
          <div class="image">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '530x612' }}" alt="{{ block.settings.image.alt }}" />
            {% else %}
              <img src="{{ 'h1-c-demo.png' | asset_url }}" alt="" />
            {% endif %}          
          </div>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
          <div class="number-and-total"></div>
          {% if block.settings.text != blank %}
          	<p>{{ block.settings.text }}</p>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>    
</div>
{% schema %}
  {
    "name": "Featured Collection",
    "class": "globo_featured_collection",
    "max_blocks": 9,
    "settings": [
        {
          "type": "select",
          "id": "css_animations",
          "label": "CSS Animation",
          "options": [
            { "value": "1", "label": "None" },
            { "value": "2", "label": "fadeIn" },
            { "value": "3", "label": "fadeInDown" },
            { "value": "4", "label": "fadeInDownBig" },
            { "value": "5", "label": "fadeInLeft" },
            { "value": "6", "label": "fadeInLeftBig" },
            { "value": "7", "label": "fadeInRight" },
            { "value": "8", "label": "fadeInRightBig" },
            { "value": "9", "label": "fadeInUp" },
            { "value": "10", "label": "fadeInDown" },
            { "value": "11", "label": "fadeInUpBig" }
          ],
          "default": "2"
        },
        {
          "type": "text",
          "id": "margin",
          "label": "Margin: (top-right-bottom-left)",
          "info": "Ex: 10px 0 30px 0"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "FEATURED COLLECTION"
        },
        {
          "type": "checkbox",
          "id": "use_arrows",
          "label": "Use Arrows?",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "use_dots",
          "label": "Use Dots?",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "use_autoplay",
          "label": "Use autoplay?",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "use_loop",
          "label": "Use Infinite loop sliding?",
          "default": false
        }
    ],
    "blocks": [
      {
        "type": "block_featured_collection",
        "name": "Add featured collection",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "SALE UP TO 40% OFF"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Hebes Chair<br />Collection<br />2018"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Pellentesque nulla mattis et. Aenean sodales placerat mentum eros. Suspendisse maximus felis enim.cursus massa in enim. Nullam lacinia faucibus risus, a euismod lorem tincidunt id. Donec maximus placerat tempor."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Collection",
        "category": "Categories & Banner",
        "blocks": [
          {
            "type": "block_featured_collection"
          },
          {
            "type": "block_featured_collection"
          },
          {
            "type": "block_featured_collection"
          }
        ]
      }
    ]
  }
{% endschema %}

