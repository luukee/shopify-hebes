{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '11' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_one_banner = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_one_banner = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_one_banner = 'container' -%}
{%- endcase -%}

<div class="g-one-banner-3 {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_one_banner }}">
    <div class="g-banner min cover-background lazy">
      <div class="container text-center">
 
          <div class="col-md-6 greeting-text">
			{% if section.settings.heading != blank %}
			<h2>{{ section.settings.heading }}</h2>
			{% endif %} 
            {% if section.settings.greeting_text != blank %}

              {% if section.settings.title != blank %}
              <div class="title-block-bold">{{ section.settings.title }}</div>
              {% endif %} 

            <p>{{ section.settings.greeting_text }}</p> 
            {% endif %}
          </div> 
        <div class="col-md-6 lg-logo">
          <div class="cover-background lazy" {% if section.settings.image != blank %}data-src="{{ section.settings.image | img_url: 'large' | split:'?' | first }}"{% else %}style="background-color: #e6e6e6;"{% endif %}>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "One Banner 5",
    "class": "globo_one_banner_3",
    "presets": [
      {
        "name": "One Banner 5",
        "category": "Categories & Banner"
      }
    ],
    "settings": [
        {
        "type": "select",
        "id": "css_animations",
        "label": "CSS Animation",
        "options": [
            { "value": "1", "label": "None" },
            { "value": "2", "label": "fadeIn" },
            { "value": "3", "label": "fadeInDown" },
            { "value": "4", "label": "fadeInDownBig" },
            { "value": "5", "label": "fadeInLeft" },
            { "value": "6", "label": "fadeInLeftBig" },
            { "value": "7", "label": "fadeInRight" },
            { "value": "8", "label": "fadeInRightBig" },
            { "value": "9", "label": "fadeInUp" },
            { "value": "10", "label": "fadeInDown" },
            { "value": "11", "label": "fadeInUpBig" }
          ],
          "default": "2"
        },
        {
          "type": "select",
          "id": "use_width",
          "label": "One banner width",
          "options": [
            { "value": "1", "label": "Use full width" },
            { "value": "2", "label": "Use padding" },
            { "value": "3", "label": "Use container" }
          ],
          "default": "2"
        },
        {
          "type": "text",
          "id": "margin",
          "label": "Margin: (top-right-bottom-left)",
          "info": "Ex: 10px 0 30px 0"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Living Sofas<br><span>Decor</span> Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
		  "default": "NEW DESIGN 2018"
        },
        {
          "type": "textarea",
          "id": "greeting_text",
          "label": "Greeting Text",
		  "default": "Greeting Text. . ."
        }
    ]
  }
{% endschema %}