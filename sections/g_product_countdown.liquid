      {
        "type": "checkbox",
        "id": "use_autoplay",
        "label": "Use autoplay?",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "use_loop",
        "label": "Use Infinite loop sliding?",
        "default": false
      }
    ],	
  	"blocks": [
      {
        "type": "countdown",
        "name": "Block product countdown",
        "settings": [
          {
            "type": "select",
            "id": "style",
            "label": "Countdown style",
            "options": [
              {
                "value": "1",
                "label": "Style 1"
              },
              {
                "value": "2",
                "label": "Style 2"
              }
            ],
            "default": "1"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "HEBES STORE"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Deal of the day"
          },
          {
            "type": "text",
            "id": "price",
            "label": "Price",
            "default": "$120.00"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "From Hebes Table Book"
          },
          {
            "type": "text",
            "id": "end_date_countdown",
            "label": "End date countdown",
            "default": "2019/10/29",
			"info": "yyyy/mm/dd"
          },
          {
            "type": "text",
            "id": "button_name",
            "label": "Button name",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ]
  }
{% endschema %}
