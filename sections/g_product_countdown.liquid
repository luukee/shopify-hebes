  {
    "name": "Product countdown",
    "class": "globo_product_countdown",
  	"presets": [
      {
        "name": "Product countdown",
        "category": "Product",
        "blocks": [
          {
            "type": "countdown"
          },
          {
            "type": "countdown"
          },
          {
            "type": "countdown"
          }
