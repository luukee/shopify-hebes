{%- case section.settings.use_width -%}
    {% when '1' %}
      	{%- assign width_countdown = 'g-fullwwidth' -%}
    {% when '2' %}
    	{%- assign width_countdown = 'container-full' -%}
    {% when '3' %}
    	{%- assign width_countdown = 'container' -%}
{%- endcase -%}

{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '11' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

<div class="g-product-countdown {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  <div class="{{ width_countdown }}">
    <div class="g-slick-slider" data-slick='{"infinite":{% if section.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if section.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if section.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":{% if section.settings.use_arrows %}true{% else %}false{% endif %},"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"vertical":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>","responsive":[{"breakpoint":1824,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":1,"slidesToScroll":1}},{"breakpoint":480,"settings":{"slidesToShow":1,"slidesToScroll":1}}]}'>
      {% for block in section.blocks %}
      <div class="item-product-countdown cover-background lazy" {% if block.settings.image != blank %}data-src="{{ block.settings.image | img_url: '1920x', format: 'pjpg' | split:'?' | first }}"{% endif %}>
        <div class="container">
          {%- case block.settings.style -%}
          {% when '1' %}
            {% if block.settings.title != blank %}
            <div class="title-coundown">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.heading != blank %}
            <h2 class="heading">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.price != blank %}
            <h3 class="price">{{ block.settings.price }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
            <div class="text-below-price">{{ block.settings.text }}</div>
            {% endif %}
            <div class="hebes-countdown" {% if block.settings.end_date_countdown != blank %}data-end-date="{{ block.settings.end_date_countdown }}"{% endif %}></div>
            {% if block.settings.button_name != blank %}
            <a href="{{ block.settings.button_link }}" class="btn-border-all">{{ block.settings.button_name }}</a>
            {% endif %}
          {% when '2' %}
          	<div class="row row-product-countdown-style-2">
              <div class="col-sm-6 col-xs-12">
                {% if block.settings.price != blank %}
                <h3 class="price">{{ block.settings.price }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                <div class="text-below-price">{{ block.settings.text }}</div>
                {% endif %}
                <div class="hebes-countdown" {% if block.settings.end_date_countdown != blank %}data-end-date="{{ block.settings.end_date_countdown }}"{% endif %}></div>
                {% if block.settings.button_name != blank %}
                <a href="{{ block.settings.button_link }}" class="btn-border-all">{{ block.settings.button_name }}</a>
                {% endif %}              	
              </div>
              <div class="col-sm-6 col-xs-12 text-center">
                {% if block.settings.title != blank %}
                <div class="title-coundown">{{ block.settings.title }}</div>
                {% endif %}
                {% if block.settings.heading != blank %}
                <h2 class="heading">{{ block.settings.heading }}</h2>
                {% endif %}                
              </div>
          	</div>
          {%- endcase -%}
        </div>    
      </div>
      {% endfor %}
    </div>
  </div>
</div>

