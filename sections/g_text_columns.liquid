    <div class="custom-block-column wow fadeIn" {% if block.settings.margin != blank %}style="margin: {{ block.settings.margin }};"{% endif %}>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12 {{ css_animations_class_left }}">
            {% if block.settings.title != blank %}
            <div class="title-block-small">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.heading != blank %}
            <h2>{{ block.settings.heading }}</h2>
            {% endif %}
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 {{ css_animations_class_right }}">
            {% if block.settings.text != blank %}
            {{ block.settings.text }}
            {% endif %}
            {% if block.settings.name != blank %}
            <div class="name-black">{{ block.settings.name }}</div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% when 'text2' %}
    {%- case block.settings.css_animations -%}
