{%- case section.settings.css_animations -%}
    {% when '1' %}
      	{%- assign css_animations_class = '' -%}
    {% when '2' %}
    	{%- assign css_animations_class = 'wow fadeIn' -%}
    {% when '3' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '4' %}
    	{%- assign css_animations_class = 'wow fadeInDownBig' -%}
    {% when '5' %}
    	{%- assign css_animations_class = 'wow fadeInLeft' -%}
    {% when '6' %}
    	{%- assign css_animations_class = 'wow fadeInLeftBig' -%}
    {% when '7' %}
    	{%- assign css_animations_class = 'wow fadeInRight' -%}
    {% when '8' %}
    	{%- assign css_animations_class = 'wow fadeInRightBig' -%}
    {% when '9' %}
    	{%- assign css_animations_class = 'wow fadeInUp' -%}
    {% when '10' %}
    	{%- assign css_animations_class = 'wow fadeInDown' -%}
    {% when '11' %}
    	{%- assign css_animations_class = 'wow fadeInUpBig' -%}
{%- endcase -%}

<div class="g-collections-masonry {{ css_animations_class }}" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  {% if section.settings.title != blank or section.settings.text != blank %}
  <div class="section-title text-center">
    {% if section.settings.title != blank %}
    <h2 class="heading-48">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
    <p>{{ section.settings.text }}</p>
    {% endif %}
  </div>
  {% endif %}
  <div class="categories-masonry">
    {% for block in section.blocks %}
    {%- case block.settings.width -%}
    {% when '1' %}
    {% assign columns_width = 'col-md-3 col-sm-6 col-xs-12' %}
    {% when '2' %}
    {% assign columns_width = 'col-md-4 col-sm-6 col-xs-12' %}
    {% when '3' %}
    {% assign columns_width = 'col-md-6 col-sm-6 col-xs-12' %}
    {%- endcase -%}
    {% case block.type %}
    {% when 'slider' %}
    <div class="{{ columns_width }} categories-grid-item" style="padding: 0; margin: 0;">
      <div class="slider-collections-masonry">
        <div style="display: none;">{% include 'dlicon-arrow-left2' %}{% include 'dlicon-arrow-right2' %}</div>
        <div class="g-slick-slider" data-slick='{"infinite":{% if block.settings.use_loop %}true{% else %}false{% endif %},"dots":{% if block.settings.use_dots %}true{% else %}false{% endif %},"slidesToShow":1,"slidesToScroll":1,"autoplay":{% if block.settings.use_autoplay %}true{% else %}false{% endif %},"arrows":{% if block.settings.use_arrow %}true{% else %}false{% endif %},"speed":"1000","autoplaySpeed":3000,"centerMode":false,"variableWidth":false,"nextArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-next default\"><svg><use xlink:href=\"#dlicon-arrow-right2\"><\/use><\/svg><\/button>","prevArrow":"<button type=\"button\" style=\"font-size:24px;width:24px;height:24px;line-height:24px;\" class=\"slick-prev default\"><svg><use xlink:href=\"#dlicon-arrow-left2\"><\/use><\/svg><\/button>"}'>
          {% if block.settings.use_slider_1 %}
          <div class="slider-item-c-masonry">
            <div class="image">
              {% if block.settings.image1 != blank %}
              	<img src="{{ block.settings.image1 | img_url: '960x860' | split:'?' | first }}" alt="{{ block.settings.image1.alt }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="info">
              {% if block.settings.title1 != blank %}
              <h5>{{ block.settings.title1 }}</h5>
              {% endif %}
              {% if block.settings.heading1 != blank %}
              <h2>{{ block.settings.heading1 }}</h2>
              {% endif %}
              {% if block.settings.text1 != blank %}
              <p>{{ block.settings.text1 }}</p>
              {% endif %}
              {% if block.settings.button_name_1 != blank %}
              <a href="{{ block.settings.button_link_1 }}">{{ block.settings.button_name_1 }} <i class="icon dl-icon-right"></i></a>
              {% endif %}
            </div>
          </div>
          {% endif %}
          {% if block.settings.use_slider_2 %}
          <div class="slider-item-c-masonry">
            <div class="image">
              {% if block.settings.image2 != blank %}
              	<img src="{{ block.settings.image2 | img_url: '960x860' | split:'?' | first }}" alt="{{ block.settings.image2.alt }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="info">
              {% if block.settings.title2 != blank %}
              <h5>{{ block.settings.title2 }}</h5>
              {% endif %}
              {% if block.settings.heading2 != blank %}
              <h2>{{ block.settings.heading2 }}</h2>
              {% endif %}
              {% if block.settings.text2 != blank %}
              <p>{{ block.settings.text2 }}</p>
              {% endif %}
              {% if block.settings.button_name_2 != blank %}
              <a href="{{ block.settings.button_link_2 }}">{{ block.settings.button_name_2 }} <i class="icon dl-icon-right"></i></a>
              {% endif %}
            </div>
          </div>
          {% endif %}
          {% if block.settings.use_slider_3 %}
          <div class="slider-item-c-masonry">
            <div class="image">
              {% if block.settings.image3 != blank %}
              <img src="{{ block.settings.image3 | img_url: '960x860' | split:'?' | first }}" alt="{{ block.settings.image3.alt }}" />
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="info">
              {% if block.settings.title3 != blank %}
              <h5>{{ block.settings.title3 }}</h5>
              {% endif %}
              {% if block.settings.heading3 != blank %}
              <h2>{{ block.settings.heading3 }}</h2>
              {% endif %}
              {% if block.settings.text3 != blank %}
              <p>{{ block.settings.text3 }}</p>
              {% endif %}
              {% if block.settings.button_name_3 != blank %}
              <a href="{{ block.settings.button_link_3 }}">{{ block.settings.button_name_3 }} <i class="icon dl-icon-right"></i></a>
              {% endif %}
            </div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% when 'image_text' %}
    <div class="{{ columns_width }} categories-grid-item" style="padding: 0; margin: 0;">
      <div class="col-relative">
        <div class="categories-item--thumbnail">
          {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: 'master' | split:'?' | first }}" alt="{{ block.settings.image.alt }}" />
          {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        <div class="categories-item--info">
          {% if block.settings.title != blank %}
          <h3 class="name">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
          <p class="excerpt">{{ block.settings.text }}</p>
          {% endif %}
        </div>
        {% if block.settings.link != blank %}<a href="{{ block.settings.link }}" class="overflow-link"></a>{% endif %}
      </div>
    </div>
    {% endcase %}
    {% endfor %}
  </div>     
</div>
<div class="clearfix"></div>
