<section id="section_page_header" class="wpb_row section-page-header {% if settings.banner_page_general != blank %}section-page-header-color{% endif %}" {% if settings.banner_page_general != blank %}style="background-image: url({{ settings.banner_page_general | img_url: '1920x', format: 'pjpg' | split:'?' | first }}); background-repeat: no-repeat; background-position: center center; background-size: cover; background-color: transparent;"{% endif %}>
    <div class="container">
        <div class="page-header-inner">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="page-title">{{ page_title }}</h1>
                    <div class="la-breadcrumbs hidden-xs">
                      <div class="la-breadcrumb-content">
                        <div class="la-breadcrumb-wrap">
                          <div class="la-breadcrumb-item"><a href="{{ shop.url }}" class="la-breadcrumb-item-link is-home" rel="home" title="{{ shop.name | escape }}">{{ 'general.breadcrumbs.home' | t }}</a></div>
                          <div class="la-breadcrumb-item">
                            <div class="la-breadcrumb-item-sep"><i class="icon dl-icon-right"></i></div>
                          </div>
                          <div class="la-breadcrumb-item"><span class="la-breadcrumb-item-target">{{ page.title }}</span></div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="page-width-content">
  <div class="container">
	{% section 'alternate01-page-template' %}
  </div>
</div>

